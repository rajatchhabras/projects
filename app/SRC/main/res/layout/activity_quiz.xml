<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".quiz">

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="score:0"
        android:textColor="#ff0000"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="34dp" />

    <TextView
        android:id="@+id/tquestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="35dp"
        android:text="questions 1/x"
        android:textColor="#000000"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="70dp" />
    <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:textColor="#000000"
        android:text="00:30"
android:layout_alignParentEnd="true"

        />
    <TextView
        android:id="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="How many days are there in Feburary"
        android:textSize="20dp"
        android:layout_above="@id/declaration"
        android:textColor="#000000"


        />
    <TextView
        android:id="@+id/declaration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" "
        android:textSize="15dp"
        android:textColor="#228b22"
        android:layout_above="@id/radi"

        />
    <RadioGroup
        android:id="@+id/radi"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/rbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Option 1: 28"/>
        <RadioButton
            android:id="@+id/rbtn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Option 2: 29"/>
        <RadioButton
            android:id="@+id/rbtn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Option 3: 30"/>
        <RadioButton
            android:id="@+id/rbtn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Option 4:none of these"/>

    </RadioGroup>
<Button
    android:id="@+id/btn"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/radi"
    android:text="Confirm"

    />

</RelativeLayout>